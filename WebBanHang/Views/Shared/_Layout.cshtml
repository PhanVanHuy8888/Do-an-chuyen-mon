
@using WebBanHang.Controllers
<!DOCTYPE html>
<html>
<head>
    <title>Win Shop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap4/bootstrap.min.css">
    <link href="~/Content/assets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link href="~/Content/Header.css" rel="stylesheet" />
    <meta name="description" content="@ViewBag.SeoDescription" />
    <meta name="keywords" itemprop="keywords" content="@ViewBag.SeoKeyWord" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/responsive.css">
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <style>
        ul.navbar_user li:hover {
            color: red; 
        }
    </style>
</head>


<body>
    <div class="super_container">

        <!-- Header -->
        <header>
            <div class="row">
                <div class="col-lg-12 text-right">
                    <div class="logo_container logo">
                        <a style="color:green;" href="/">win<span style="color:deeppink;">shop</span></a>
                    </div>
                    <nav class="navbar">
                        @Html.Action("MenuTop", "Menu")
                        <ul class="navbar_user nav">
                            <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                            <li class="parent">
                                <a href="#">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </a>
                                <ul class="child">
                                    <li><a href="#">Sign In</a></li>
                                    <li><a href="#">Register</a></li>
                                </ul>
                            </li>

                            <li class="checkout">
                                <a href="/gio-hang">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    <span id="checkout_items" class="checkout_items">0</span>
                                </a>
                            </li>
                        </ul>
                        <div class="hamburger_container">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </nav>
                </div>
            </div>
        </header>


        @RenderBody()

        <!-- Footer -->
        <footer id="aa-footer">
            <div class="aa-footer-top">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="aa-footer-top-area">
                                <div class="row">
                                    <div class="col-md-3 col-sm-6">
                                        <div class="logo_container">
                                            <a style="font-size: 40px; color: green;" href="/trang-chu">win<span style="color:deeppink;">shop</span></a>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="aa-footer-widget">
                                            <h4><span style="color: rebeccapurple">Danh mục sản phẩm</span></h4>
                                            <ul class="aa-footer-nav">
                                                <li><a href="/san-pham">Nam</a></li>
                                                <li><a href="/san-pham">Nữ</a></li>
                                                <li><a href="/san-pham">Phụ kiện</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="aa-footer-widget">
                                            <div class="aa-footer-widget">
                                                <h4><span style="color: rebeccapurple">Về WinShop</span></h4>
                                                <ul class="aa-footer-nav">
                                                    <li><a href="#">Giới thiệu về WinShop</a></li>
                                                    <li><a href="#">Điều khoản</a></li>
                                                    <li><a href="#">Chính sách bảo mật</a></li>
                                                    <li><a href="#">Vận chuyển</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="aa-footer-widget">
                                            <div class="aa-footer-widget">
                                                <h4 style="color: rebeccapurple">Liên hệ</h4>
                                                <address>
                                                    <p>Thượng Mỗ - Đan Phượng - Hà Nội</p>
                                                    <p>
                                                        <span class="fa fa-phone"></span> 0773198203
                                                    </p>
                                                    <p>
                                                        <span class="fa fa-envelope"></span> hphan0859@gmail.com
                                                    </p>
                                                </address>
                                                <div class="aa-footer-social">
                                                    <a href="#"><span class="fa fa-facebook"></span></a>
                                                    <a href="#"><span class="fa fa-twitter"></span></a>
                                                    <a href="#">
                                                        <span class="fa fa-google-plus"></span>
                                                    </a>
                                                    <a href="#"><span class="fa fa-youtube"></span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>


    <script src="~/Content/assets/css/bootstrap4/popper.js"></script>
    <script src="~/Content/assets/css/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/assets/plugins/easing/easing.js"></script>
    <script src="~/Content/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jsShopping.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
