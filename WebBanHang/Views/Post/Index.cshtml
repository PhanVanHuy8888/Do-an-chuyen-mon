@model PagedList.PagedList<WebBanHang.Models.EF.Posts>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/css/main_styles.css">
<!-- Slider -->
<style>
    .post_section_container {
        margin-top: 180px;
    }

    .row-item-post {
        margin-bottom: 20px;
    }

    .title-post {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .pagination {
        padding: 50px 0 0 0;
    }

        .pagination li {
            margin: 0 5px;
            display: inline-block;
        }

        .pagination a {
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #ccc;
            background-color: #f8f8f8;
            color: #333;
        }

            .pagination a:hover {
                background-color: #ddd;
            }

        .pagination .disabled {
            color: #aaa;
            pointer-events: none;
        }

        .pagination .active {
            background-color: #4CAF50;
            color: green;
        }
</style>

<div class="container post_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-post"> Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-post">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/chi-tiet-n@(item.Id)" title="@item.Title">@item.Title</a></h3>
                        <div>
                            @item.Description
                        </div>
                        <div>
                            @item.SeoTitle
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }

</div>
